header
	background-color: #fff

	.header-top
		padding: 2rem
		// .brand

	.menu-dropdowns
		flex: 0 0 auto
		margin-left: auto
		.service-menu .altLoginBox
			margin-top: 10px
			#loginboxFbConnect
				display: inline-block
		.minibasket-menu
			margin: 0 1rem
		.dropdown-menu
			min-width: 40px
		table .badge
			background-color: #FC6621
			position: absolute
			top: 3px
			right: 3px
			font-weight: 500
		// .btn-group
			

	.service-menu
		&.showLogin .dropdown-menu
			min-width: 480px
		.dropdown-menu
			padding: 1rem
			flex-flow: row nowrap
			// #services


	.shopping-bag
		height: 24px
		width: 24px
		&:not(.filled)
			opacity: .2
			color: #000
		&:hover
			opacity: 1
		&.filled
			opacity: 1
			color: rgb(0,125,255)
		&-mini
			height: 25px
			width: 25px
			margin: -5px 0
			color: #009EC0
		&.filled
			color: #FC6621

	#mainnav
		.nav > a
			color: red

		.fixed-header-actions
			display: none

		.navbar-toggle
			float: none

	.dropdown-menu
		margin: .5rem
		a
			flex-flow: row nowrap

	.languages-menu
		.name
			margin-right: 1rem
		.flag img
			margin: .5rem .5rem .5rem auto
